<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="home.htm">pvc</prop>
				<prop key="result.htm">studCont</prop>
			</props>
		</property>
	</bean>
	
	<bean id="pvc" class="org.springframework.web.servlet.mvc.ParameterizableViewController">
		<property name="viewName" value="welcome"/>
	</bean>
	
	<bean id="studCont" class="com.nt.controller.StudentController">
		<property name="successView" value="result"/>
		<property name="commandClass" value="com.nt.command.RegistrationCommand"/>
		<property name="commandName" value="regCmd"/>
		<property name="validator" ref="studValid"/>
		<property name="sessionForm" value="true"/>
		<property name="formView" value="welcome"/>
	</bean>

	
	<bean id="resourceBundle" class="org.springframework.context.support.ResourceBundleMessageSource">
			<property name="basename" value="com/nt/commans/validation"></property>
	</bean>
	
	<bean id="studValid"  class="com.nt.validator.StudentValidation"/>
	
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/pages/"/>
		<property name="suffix" value=".jsp"/>
	</bean>

</beans>
